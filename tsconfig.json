{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "sourceRoot": "src",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es6", "dom"]
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
