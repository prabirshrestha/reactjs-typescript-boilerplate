{
  "name": "reactjs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript will officially support JSX. Currently you will need to manually compile the typescript compiler\r from the master branch or use the nightly typescript npm package.",
  "main": "index.js",
  "scripts": {
    "start": "node_modules/.bin/webpack-dev-server --config=webpack.config.js --port=3000 --progress --colors --watch --devtool source-map --hot",
    "build": "node_modules/.bin/webpack --config=webpack.config.js --progress --colors --devtool source-map",
    "build:prod": "node_modules/.bin/webpack --config=webpack.config.js --progress --colors --optimize-minimize --devtool source-map",
    "test": "node_modules/.bin/testem",
    "test:ci": "node_modules/.bin/testem ci -R xunit"
  },
