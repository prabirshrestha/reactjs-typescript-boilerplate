  "dependencies": {
    "css-loader": "^0.15.1",
    "es5-shim": "^4.1.7",
    "less": "^2.5.1",
    "less-loader": "^2.2.0",
    "node-libs-browser": "^0.5.2",
    "ntypescript": "^1.201507021036.1",
    "react": "^0.13.3",
    "react-hot-loader": "^1.2.7",
